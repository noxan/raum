{
  "name": "raum",
  "version": "0.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "ts-node .",
    "dev": "nodemon -x yarn start -e ts",
    "test": "jest",
    "client:start": "ts-node client/index.ts",
    "client:dev": "nodemon -x yarn client:start -e ts"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/ws": "^6.0.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "@types/node": "^10.12.15",
    "isomorphic-ws": "^4.0.1",
    "ws": "^6.1.2"
  }
}
